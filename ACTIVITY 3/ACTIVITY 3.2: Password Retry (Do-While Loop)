import java.util.Scanner;
class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        String correctUsername = "Tonyangmasa@gmail.com";
        String correctPassword = "mamioni1234";
        String enteredUsername;
        String enteredPassword;
        do {
            System.out.print("Enter your Username: ");
            enteredUsername = sc.nextLine();
            System.out.print("Enter your Password: ");
            enteredPassword = sc.nextLine();
            if (!enteredUsername.equals(correctUsername)) {
                System.out.println("Incorrect Username, Try Again!");
            } else if (!enteredPassword.equals(correctPassword)) {
                System.out.println("Incorrect Password, Try Again!");
            }
        } while (!enteredUsername.equals(correctUsername) || !enteredPassword.equals(correctPassword));
        System.out.println("Access Granted!");
    }
}

